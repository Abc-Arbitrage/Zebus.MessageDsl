<Project>

  <ItemGroup>
    <ZebusMessages Update="@(ZebusMessages)" ZebusMessageDslNamespace="%(CustomToolNamespace)" />
    <ZebusMessages Update="@(ZebusMessages->WithMetadataValue('CustomToolNamespace', '(default)'))" ZebusMessageDslNamespace="$([MSBuild]::ValueOrDefault('$(RootNamespace).%(RelativeDir)', '').Replace('\', '.').Replace('/', '.').Trim('.'))" />
    <None Remove="**\*.msg" />
    <AdditionalFiles Include="@(ZebusMessages)" />
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="ZebusMessageDslNamespace" />
  </ItemGroup>

  <ItemGroup Condition="'$(NCrunch)' == '1'">
    <None Include="@(ZebusMessages)" />
  </ItemGroup>

</Project>
